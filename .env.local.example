# Local Environment Variables for Act Testing
# Copy this file to .env.local and customize for your local setup
# This file is used when running GitHub Actions locally with 'act'

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/scanorama_test
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=scanorama_test
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSLMODE=disable

# Test database settings
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/scanorama_test
TEST_DB_NAME=scanorama_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# =============================================================================
# Application Configuration
# =============================================================================
APP_ENV=test
APP_PORT=8080
APP_HOST=localhost
LOG_LEVEL=debug
DEBUG=true

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api/v1

# =============================================================================
# GitHub Actions Environment Variables
# =============================================================================
CI=true
GITHUB_ACTIONS=true
GITHUB_WORKFLOW=docs-validation
GITHUB_RUN_ID=123456789
GITHUB_RUN_NUMBER=42
GITHUB_JOB=docs-validation
GITHUB_ACTION=__run
GITHUB_REPOSITORY=anstrom/scanorama
GITHUB_REPOSITORY_OWNER=anstrom
GITHUB_REF=refs/heads/main
GITHUB_REF_NAME=main
GITHUB_SHA=a1b2c3d4e5f6789012345678901234567890abcd
GITHUB_EVENT_NAME=push
GITHUB_WORKSPACE=/github/workspace
GITHUB_ACTOR=developer
RUNNER_OS=Linux
RUNNER_ARCH=X64
RUNNER_NAME=GitHub Actions
RUNNER_ENVIRONMENT=github-hosted

# =============================================================================
# Documentation and Validation Settings
# =============================================================================
# Node.js and npm settings
NODE_ENV=test
NODE_VERSION=22
NPM_CONFIG_AUDIT=false
NPM_CONFIG_FUND=false

# Documentation paths
DOCS_DIR=docs
SWAGGER_DIR=docs/swagger
SWAGGER_FILE=docs/swagger/swagger.yaml

# Validation settings
DOCS_VALIDATION_ENABLED=true
DOCS_FAIL_ON_WARNING=false
DOCS_GENERATE_CLIENTS=true

# OpenAPI Generator settings
OPENAPI_GENERATOR_VERSION=latest
OPENAPI_GENERATOR_CLI_VERSION=2.15.0

# =============================================================================
# Testing Configuration
# =============================================================================
# Test execution settings
TEST_TIMEOUT=300
TEST_PARALLEL=1
TEST_VERBOSE=true
COVERAGE_ENABLED=true
COVERAGE_THRESHOLD=75

# Integration test settings
INTEGRATION_TESTS_ENABLED=true
SERVER_STARTUP_TIMEOUT=30
HEALTH_CHECK_INTERVAL=1
HEALTH_CHECK_RETRIES=30

# =============================================================================
# Security and Secrets (for local testing only)
# =============================================================================
# Note: These are dummy values for local testing
# Real secrets should be in .secrets.local (not committed to git)
GITHUB_TOKEN=dummy_token_for_local_testing
API_SECRET_KEY=local_test_secret_key_not_for_production

# =============================================================================
# Docker and Service Configuration
# =============================================================================
# Docker settings for act
DOCKER_HOST=unix:///var/run/docker.sock
COMPOSE_PROJECT_NAME=scanorama_test

# Service endpoints for integration tests
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Build and Deployment Settings
# =============================================================================
BUILD_VERSION=test
BUILD_COMMIT=local
BUILD_TIME=2024-08-15T12:00:00Z
BINARY_NAME=scanorama

# Go build settings
CGO_ENABLED=0
GOOS=linux
GOARCH=amd64

# =============================================================================
# Debugging and Development
# =============================================================================
# Enable debug output for various components
DB_DEBUG=true
API_DEBUG=true
DOCS_DEBUG=true
VERBOSE_LOGGING=true

# Development tools
GOLANGCI_LINT_VERSION=latest
SWAG_VERSION=latest

# =============================================================================
# Platform Specific Settings
# =============================================================================
# Act runner configuration
ACT_PLATFORM=ubuntu-latest=catthehacker/ubuntu:act-latest
ACT_RUNNER_IMAGE=catthehacker/ubuntu:act-latest

# Container resource limits
CONTAINER_MEMORY=4g
CONTAINER_CPUS=2

# =============================================================================
# Custom Application Settings
# =============================================================================
# Add any custom environment variables your application needs here
# Example:
# CUSTOM_FEATURE_FLAG=true
# EXTERNAL_API_URL=http://localhost:3000
# CACHE_TTL=300
