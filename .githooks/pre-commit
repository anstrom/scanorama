#!/bin/bash

# Pre-commit hook to enforce code quality checks
# This hook runs before each commit and prevents commits if checks fail

set -e

echo "ğŸ” Running pre-commit checks..."

# Change to repository root
cd "$(git rev-parse --show-toplevel)"

# Run linting
echo "ğŸ“ Running linter..."
if ! make lint; then
    echo "âŒ Linting failed! Please fix the issues above before committing."
    echo "ğŸ’¡ You can run 'make lint-fix' to automatically fix some issues."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0
