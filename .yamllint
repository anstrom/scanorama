extends: default

yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

rules:
  # Line length should be enforced but with some flexibility
  line-length:
    max: 100
    level: warning

  # Allow duplicate keys in YAML files (sometimes needed for overlays)
  key-duplicates: disable

  # Indentation should be consistent
  indentation:
    spaces: 2
    indent-sequences: true

  # Document start marker is optional
  document-start:
    present: false
    level: warning

  # Document end marker is optional
  document-end:
    present: false

  # Allow multiple empty lines
  empty-lines:
    max: 2
    max-start: 1
    max-end: 1

  # Trailing spaces should be removed
  trailing-spaces: enable

  # Truthy values should be consistent
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: false

  # Comments should be properly formatted
  comments:
    require-starting-space: true
    min-spaces-from-content: 1

  # Brackets should have consistent spacing
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Colons should have consistent spacing
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

  # Commas should have consistent spacing
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1

  new-lines:
    type: unix

  new-line-at-end-of-file: enable
