{
  "name": "scanorama-docs",
  "version": "0.7.0",
  "description": "Documentation tooling for Scanorama API",
  "private": true,
  "scripts": {
    "docs:lint": "redocly lint docs/swagger/swagger.yaml",
    "docs:validate": "redocly lint docs/swagger/swagger.yaml --format summary",
    "docs:build": "redocly build-docs docs/swagger/swagger.yaml --output docs/swagger/index.html",
    "docs:serve": "redocly preview-docs docs/swagger/swagger.yaml",
    "docs:bundle": "redocly bundle docs/swagger/swagger.yaml --output docs/swagger/bundled.yaml",
    "spectral:lint": "spectral lint docs/swagger/swagger.yaml",
    "openapi:generate-js": "openapi-generator-cli generate -i docs/swagger/swagger.yaml -g javascript -o dist/js-client",
    "openapi:generate-ts": "openapi-generator-cli generate -i docs/swagger/swagger.yaml -g typescript-axios -o dist/ts-client",
    "test:clients": "npm run openapi:generate-js && npm run openapi:generate-ts"
  },
  "devDependencies": {
    "@redocly/cli": "^1.25.0",
    "@stoplight/spectral-cli": "^6.13.0",
    "@openapitools/openapi-generator-cli": "^2.15.0",
    "js-yaml": "^4.1.0",
    "swagger-ui-dist": "^5.17.0"
  },
  "overrides": {
    "glob": "^11.0.0",
    "sourcemap-codec": "@jridgewell/sourcemap-codec@^1.5.0"
  },
  "engines": {
    "node": ">=20.17.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anstrom/scanorama.git"
  },
  "keywords": [
    "api-documentation",
    "openapi",
    "swagger",
    "validation",
    "documentation"
  ],
  "author": "Scanorama Team",
  "license": "MIT"
}
