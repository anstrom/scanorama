# npm configuration for CI optimization and reproducible builds

# Performance optimizations
prefer-offline=true
audit-level=moderate
fund=false
update-notifier=false

# CI-friendly settings
progress=false
loglevel=warn
save-exact=true

# Security and reliability
strict-ssl=true
registry=https://registry.npmjs.org/

# Cache optimization (prefer-offline already set above)

# Prevent interactive prompts
yes=true

# Package installation preferences
package-lock=true

save=true
save-dev=false
